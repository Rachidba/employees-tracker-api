        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^5.9.15",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.0.1",
        "@typescript-eslint/parser": "^3.0.1",
        "eslint": "^7.1.0",
        "eslint-config-airbnb-typescript": "^7.2.1",
        "ts-node": "^8.10.1",
        "ts-node-dev": "^1.0.0-pre.44"
    }
